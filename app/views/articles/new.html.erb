<nav>
  <div class="nav-class">
    <a href="#" class="brand-logo">Logo</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <li><%= link_to "Logout", destroy_session_path %></li>
    </ul>
  </div>
</nav>
<div class="container">
  <div class="row">
    <%= form_for @article do |a| %>
      <%if @article.errors[:title][0] == "can't be blank"%>
        <p class="red-text text-darken-2"><%=flash[:notice] = "Title can't be black"%></p>
      <%end%>
      <%= a.text_field :title, placeholder:"Title"%><br>
      <%if @article.errors[:text][0] == "can't be blank"%>
        <p class="red-text text-darken-2"><%=flash[:notice] = "Body can't be black"%></p>
      <%end%>
      <%= a.text_area :text, placeholder:"Body", class:"materialize-textarea", style:"height: 400px" %>
      <div class="row">
        <div class="file-field input-field">
          <div class="btn">
            <span>Upload an image</span>
            <%= a.file_field :image%>
          </div>
          <div class="file-path-wrapper">
            <%= a.text_field :image, class:"file-path validate"%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12 l6">
          <%= a.submit class:"waves-effect waves-light btn" %>

        </div>
        <div class="col s12 m12 l6">
          <%= link_to  "Back to the list", articles_path %>
        </div>
      </div>
    <%end %>
  </div>
</div>